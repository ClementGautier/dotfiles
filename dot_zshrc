export ZSH="/home/clement/.oh-my-zsh"
export ZSH_THEME="powerlevel9k/powerlevel9k"
export MANPATH="/usr/local/man:$MANPATH"
export EDITOR="vim"
export ARCHFLAGS="-arch x86_64"
export SSH_KEY_PATH="~/.ssh/rsa_id"
export PATH=$HOME/bin:$HOME/.local/bin:/usr/local/bin:/snap/bin:$PATH
export PROJECT_DIR=$HOME/Projects/
export KUBECONFIG=$HOME/.kube/config

plugins=(
  git
  kubectl
  symfony2
)

source $ZSH/oh-my-zsh.sh
source <(stern --completion=zsh)
source /usr/share/google-cloud-sdk/completion.zsh.inc

alias zshconfig="code ~/.zshrc"
alias ohmyzsh="code ~/.oh-my-zsh"
alias meteo="curl -4 http://wttr.in/Nantes "
alias gcr-purge-untagged="gcloud container images list-tags eu.gcr.io/substra-208412/${IMAGE} --filter='-tags:*' --format='get(digest)' --limit=unlimited | awk '{print \"eu.gcr.io/substra-208412/${IMAGE}@\" \$1}' | xargs gcloud container images delete --quiet"
alias gcr-purge-date="gcloud container images list-tags eu.gcr.io/substra-208412/${IMAGE} --filter='timestamp.datetime < ${DATE}' --format='get(digest)' --limit=unlimited | awk '{print \"eu.gcr.io/substra-208412/${IMAGE}@\" \$1}' | xargs gcloud container images delete --force-delete-tags --quiet"

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(kubecontext context dir vcs)

